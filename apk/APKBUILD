# Maintainer: Dan Hunsaker <danhunsaker@gmail.com>
pkgname=nanoinit
pkgver=0.0.3
pkgrel=3
pkgdesc="A small, proper, init process for docker containers."
url="https://github.com/mu-box/nanoinit"
arch="all"
license="MPL-2.0"
depends=""
makedepends=""
checkdepends=""
install=""
subpackages=""
source=""
builddir=""

build() {
	make -C ../ nanoinit
}

check() {
	# Replace with proper check command(s)
	:
}

package() {
	install -m 0755 -D ../nanoinit "$pkgdir"/sbin/nanoinit
    install -d "$pkgdir"/etc/nanoinit.d
    install -d "$pkgdir"/etc/container_environment
    install -m 0755 -D /dev/null "$pkgdir"/etc/rc.local
    install -m 0755 -D /dev/null "$pkgdir"/etc/container_environment.sh
}

